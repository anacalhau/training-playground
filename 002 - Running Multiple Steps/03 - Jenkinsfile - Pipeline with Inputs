pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                echo "$NAME"
                echo "$AGE"
            }
	}
	
        stage('Input') {
            steps {
                input('Do you want to proceed?')
            }
        }
        stage('If Proceed is clicked') {
            steps {
                print('hello')
            }
        }
    }
}
